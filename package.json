{
	"name": "hacksaw",
	"productName": "hacksaw",
	"version": "3.8.2",
	"description": "my league modding suite",
	"main": "src/electron/main_process.cjs",
	"repository": {
		"type": "git",
		"url": "https://github.com/TheMartynasXS/Hacksaw"
	},
	"build": {
		"appId": "com.github.devmarcius.hacksaw",
		"win": {
			"target": [
				"portable"
			]
		},
		"nsis": {
			"artifactName": "${name}-${version}-setup.${ext}",
			"oneClick": false,
			"perMachine": false,
			"runAfterFinish": false,
			"deleteAppDataOnUninstall": true,
			"allowToChangeInstallationDirectory": true
		},
		"portable": {
			"artifactName": "${name}-${version}-portable.${ext}"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "DevMarcius",
				"repo": "Hacksaw"
			}
		]
	},
	"scripts": {
		"vite-dev": "vite dev",
		"vite-build": "vite build",
		"electron-build": "electron-builder build --win --publish never",
		"electron-publish": "electron-builder build --win --publish always",
		"dev": "concurrently -k \"vite dev\" \"electron . --dev\"",
		"build": "vite build && npm run electron-build",
		"deploy": "vite build && npm run electron-publish"
	},
	"keywords": [],
	"author": {
		"name": "DevMarcius"
	},
	"license": "MIT",
	"dependencies": {
		"electron-color-picker": "^0.2.0",
		"lodash": "^4.17.21",
		"open": "^8.4.0",
		"path-sort": "^0.1.0"
	},
	"devDependencies": {
		"@ptkdev/sveltekit-electron-adapter": "^0.3.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"concurrently": "^8.2.1",
		"electron-builder": "^24.6.4",
		"electron-nightly": "^28.0.0-nightly.20230912",
		"svelte": "^4.0.5",
		"vite": "^4.4.2"
	},
	"type": "module"
}
